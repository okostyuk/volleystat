<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/center"
        android:layout_centerInParent="true"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <Button
        android:text="-1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/neg" />

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/neg"
        android:layout_centerHorizontal="true"
        android:id="@+id/neutral" />

    <Button
        android:text="+1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/neutral"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/pos" />

    <TextView
        android:gravity="center"
        android:textSize="26sp"
        android:text="23 : 25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/score"
        android:layout_alignBottom="@+id/incLeft" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_exposure_plus_1_black_24dp"
        android:id="@+id/incLeft"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/neutral"
        android:layout_toStartOf="@+id/neutral" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_exposure_plus_1_black_24dp"
        android:layout_alignParentTop="true"
        android:id="@+id/incRight"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/neutral"
        android:layout_toEndOf="@+id/neutral" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_player"
        android:layout_below="@+id/score"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/playersList"
        android:layout_above="@+id/buttonsRow1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/neg"
        android:id="@+id/buttonsRow2">

        <Button
            android:text="Защита"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/dig"
            android:layout_weight="1" />

        <Button
            android:text="Блок"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/block"
            android:layout_weight="1" />

        <Button
            android:text="Прием"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/pass"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonsRow1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonsRow2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            tools:drawableRight="@drawable/ic_done_black_24dp"
            android:text="атака"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/attack"
            android:layout_weight="1" />

        <Button
            android:text="пасс"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/set"
            android:layout_weight="1" />

        <Button
            android:text="Подача"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/serve"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>