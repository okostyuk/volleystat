<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/center"
        android:layout_centerInParent="true"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <Button
        android:text="-1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/neg" />

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/neg"
        android:layout_centerHorizontal="true"
        android:id="@+id/neutral" />

    <Button
        android:text="+1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/neutral"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/pos" />

    <Button
        android:text="Атака"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/neg"
        android:id="@+id/attack"
        android:layout_alignRight="@+id/center"
        android:layout_alignEnd="@+id/center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Блок"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/neutral"
        android:layout_toRightOf="@+id/attack"
        android:id="@+id/block"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Подача"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/attack"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/put" />

    <Button
        android:text="Пасс"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/attack"
        android:layout_alignLeft="@+id/neutral"
        android:layout_alignStart="@+id/neutral"
        android:id="@+id/pass" />

    <Button
        android:text="Прием"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/block"
        android:layout_alignLeft="@+id/pos"
        android:layout_alignStart="@+id/pos"
        android:id="@+id/receive" />

    <TextView
        android:gravity="center"
        android:textSize="26sp"
        android:text="23 : 25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/score"
        android:layout_alignBottom="@+id/incLeft" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_exposure_neg_1_black_24dp"
        android:id="@+id/decLeft"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_exposure_plus_1_black_24dp"
        android:id="@+id/incLeft"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/decLeft"
        android:layout_toEndOf="@+id/decLeft" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_exposure_neg_1_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/decRight" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_exposure_plus_1_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/decRight"
        android:layout_toStartOf="@+id/decRight"
        android:id="@+id/incRight" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_player"
        android:layout_below="@+id/score"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/put"
        android:id="@+id/playersList" />

</RelativeLayout>